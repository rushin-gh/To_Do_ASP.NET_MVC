@model ToDo.Models.ToDoModel
@{ 
    Layout = null;
}

@using (Html.BeginForm("Index", "Login", FormMethod.Post))
{
    <main>
        <div class="container">
            <h3>Login Page</h3>
            <div class="input-group mb-3">
                @Html.TextBoxFor(model => model.UserName, new { @type = "text", @name = "UserName", @class="form-control", @placeholder="Username" })
            </div>
            <div class="input-group mb-3">
                @Html.TextBoxFor(model => model.UserPassword, new { @type = "password", @name = "UserPassword", @class = "form-control", @placeholder="Password"})
            </div>
            <div class="input-group mb-3">
                <button type="submit" class="btn btn-primary btn-sm btn-block">Login</button>
            </div>
        </div>
    </main>
}
